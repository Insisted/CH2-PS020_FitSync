    //BottomNavigationView
    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
        <item name="itemTextColor">@color/md_theme_light_onSurfaceVariant</item>
        <item name="itemIconTint">@color/md_theme_light_onSurfaceVariant</item>
        <item name="itemIconSize">20dp</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.FitSync.LabelMedium</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.FitSync.LabelLarge</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorSurface">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>

    </style>

    <style name="Widget.Material3.BottomNavigationView.ActiveIndicator" parent="">
        <item name="android:width">@dimen/m3_bottom_nav_item_active_indicator_width</item>
        <item name="android:height">@dimen/m3_bottom_nav_item_active_indicator_height</item>
        <item name="marginHorizontal">@dimen/m3_bottom_nav_item_active_indicator_margin_horizontal
        </item>
        <item name="shapeAppearance">
            @style/ShapeAppearance.Material3.NavigationBarView.ActiveIndicator
        </item>
        <item name="android:color">@color/md_theme_light_surface</item>
    </style>

    //Button

    <style name="Widget.App.Button.OutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button.TextButton</item>
        <item name="android:textAppearance">@style/TextAppearance.FitSync.LabelMedium</item>
        <item name="android:textColor">@color/md_theme_light_onPrimaryContainer</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button</item>
        <item name="android:textAppearance">@style/TextAppearance.FitSync.LabelLarge</item>
    </style>

    <style name="ThemeOverlay.App.Button.TextButton" parent="ThemeOverlay.Material3.Button.TextButton">
        <item name="colorOnContainer">@color/md_theme_light_primaryContainer</item>
    </style>

    <style name="ThemeOverlay.App.Button" parent="ThemeOverlay.Material3.Button">
        <item name="colorContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnContainer">@color/md_theme_light_onPrimaryContainer</item>
    </style>


    <style name="Theme.FitSync" parent="Base.Theme.FitSync">
        <item name="textAppearanceDisplayLarge">@style/TextAppearance.FitSync.DisplayLarge</item>
        <item name="textAppearanceDisplayMedium">@style/TextAppearance.FitSync.DisplayMedium</item>
        <item name="textAppearanceDisplaySmall">@style/TextAppearance.FitSync.DisplaySmall</item>
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.FitSync.HeadlineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.FitSync.HeadlineMedium</item>
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.FitSync.HeadlineSmall</item>
        <item name="textAppearanceTitleLarge">@style/TextAppearance.FitSync.TitleLarge</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.FitSync.TitleMedium</item>
        <item name="textAppearanceTitleSmall">@style/TextAppearance.FitSync.TitleSmall</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.FitSync.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.FitSync.BodyMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.FitSync.BodySmall</item>
        <item name="textAppearanceLabelLarge">@style/TextAppearance.FitSync.LabelLarge</item>
        <item name="textAppearanceLabelMedium">@style/TextAppearance.FitSync.LabelMedium</item>
        <item name="textAppearanceLabelSmall">@style/TextAppearance.FitSync.LabelSmall</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>

        <item name="materialButtonOutlinedStyle">@style/Widget.App.Button.OutlinedButton</item>
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
    </style>


